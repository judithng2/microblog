{{! Partial for a single post }}
<div class="post">
    <table>
        <tr>
            <th><img class="avatar" src="/avatar/{{username}}" alt="User Avatar" class="header-avatar"></th>
            <th>
                <article class="post">
                    <h3>{{title}}</h3>
                    <p>{{content}}</p>
                    <small>
                        {{#ifCond username this.user.username}}
                            <button class="delete-button" id="deleteBtn" data-id={{id}} onclick="handleDeleteClick(event)"></button>
                        {{else}}
                            <button data-id={{id}} onclick="handleLikeClick(event)">â™¥</button>
                        {{/ifCond}}
                        <span id="postLikes">{{likes}} likes</span>
                        By: {{username}} At: {{timestamp}}
                    </small>     
               </article> 
            </th>
        </tr>
    </table>
</div>

<script>
    function handleLikeClick(event) {
        const pstId = event.target.getAttribute('data-id');
        let likeUrl = '/like/:id';

        // you might want to "fetch" something...  
        fetch(likeUrl, {
            method: "POST", 
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                postId: pstId
            })
        })
        .then(statusCheck).then(processData)
        .catch(handleError);
    }

    function handleDeleteClick(event) {
        const buttonElement = event.target.closest('.delete-button');
        const postId = buttonElement.getAttribute('data-id');  
        let deleteUrl = '/delete/:id';
        // you might want to "fetch" something...        
        fetcth(deleteUrl, {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({postId: pstId})
        })
        .then(statusCheck).then(processData)
        .catch(handleError);
    }

    function statusCheck(res) {
        if (!res.ok) {
            throw new Error('Failed to interact with post: ' + res.statusText);
        }
        return res;
    }  

    function processData(data) {
        window.location.reload();
    }

    function handleError(error) {
        console.error('Error interacting with post: ', error);
    }
</script>