{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <!-- the user's avatar -->
        <img src="/avatar/{{username}}" alt="User Avatar">
    </div>
    <div class="post-content preserve-newlines">
        <!-- the post -->
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <div class="post-status-bar">
            <!-- everything that is shown in the status bar -->
            <!-- Heart = ‚ô° -->
            <!-- font awesome  trashcan = <i class="fas fa-trash-alt"> </i>-->
            {{#ifCond username ../user.username}}
                <button class="delete-button" onclick="handleDeleteClick" data-id={{id}}>üóëÔ∏è</button>
            {{else}}
                <button onClick="handleLikeClick" data-id={{id}}>‚ô°</button>
            {{/ifCond}}
            {{likes}} Likes Posted by {{username}}
            <p>{{timestamp}}</p>
        </div>        
    </div>
</div>

<script>
    function handleLikeClick(event) {
        const pstId = event.target.getAttribute('data-id');
        let likeUrl = '/like/:id';

        // you might want to "fetch" something...  
        fetch(likeUrl, {
            method: "POST", 
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                postId: pstId
            })
        })
        .then(statusCheck).then(processData)
        .catch(handleError);
    }

    function handleDeleteClick(event) {
        const buttonElement = event.target.closest('.delete-button');
        const postId = buttonElement.getAttribute('data-id');  
        let deleteUrl = '/delete/:id';
        // you might want to "fetch" something...        
        fetcth(deleteUrl, {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({postId: pstId})
        })
        .then(statusCheck).then(processData)
        .catch(handleError);
    }

    function statusCheck(res) {
        if (!res.ok) {
            throw new Error('Failed to interact with post: ' + res.statusText);
        }
        return res;
    }  

    function processData(data) {
        window.location.reload();
    }

    function handleError(error) {
        console.error('Error interacting with post: ', error);
    }
</script>